{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "declaration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "pretty": false,
        "sourceMap": false,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "traceResolution": false
    },
    "include": [
        "src/**/*.ts",
        "example/**/*.ts",
        "test/test.ts"
    ]
}