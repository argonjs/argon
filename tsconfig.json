{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "declaration": true,
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "pretty": false,
        "sourceMap": false,
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "traceResolution": false
    },
    "include": [
        "types/declarations.d.ts",
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}